<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.TeacherActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_height="0dp">
        <TextView
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#ff000000"
            android:text="教师管理页面"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_class"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/ic_coure_yi"
            android:text="课程周数: "
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="60dp">
        </TextView>
        <Spinner
            android:id="@+id/class_select_spinner"
            android:layout_width="0dp"
            android:entries="@array/weeks"
            android:layout_weight="0.7"
            android:background="@color/ic_coure_si_pr"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_height="60dp">
        </Spinner>
    </LinearLayout>
    <ScrollView
        android:visibility="gone"
        android:id="@+id/t_main_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:layout_weight="0.8"
        >
        <com.tencent.cloud.ai.equipmentmanagement.custom.TimeTableView
            android:id="@+id/t_main_timetable_ly"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        </com.tencent.cloud.ai.equipmentmanagement.custom.TimeTableView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/t_sy_application"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:padding="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="名称"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </TextView>
            <EditText
                android:background="@drawable/edit_type"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="数量"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </TextView>
            <EditText
                android:background="@drawable/edit_type"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="单位"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </TextView>
            <EditText
                android:background="@drawable/edit_type"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="备注"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </TextView>
            <EditText
                android:background="@drawable/edit_type"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="30dp">
            </EditText>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/add_class"
            android:text="排课"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="60dp">
        </Button>
        <Button
            android:text="耗材申请"
            android:layout_margin="5dp"
            android:id="@+id/use_require"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp">
        </Button>
    </LinearLayout>

</LinearLayout>